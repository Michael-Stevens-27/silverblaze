file = {:home/mstevens/Desktop/Papers/ecology and disease/2012 Yeka - malaria in uganda.pdf:pdf},
issn = {0001706X},
journal = {Acta Tropica},
keywords = {Artemisinin-based combination therapy,Indoor residual spraying,Insecticide treated nets,Intermittent preventive therapy,Malaria,Uganda},
number = {3},
pages = {184--195},
pmid = {21420377},
publisher = {Elsevier B.V.},
title = {{Malaria in Uganda: Challenges to control on the long road to elimination. I. Epidemiology and current control efforts}},
